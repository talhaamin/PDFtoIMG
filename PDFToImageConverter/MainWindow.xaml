<Window x:Class="PDFToImageConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF &amp; Image Converter Pro" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF5722"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="DisabledBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="DisabledTextBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{StaticResource DisabledBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Browse Button Style -->
        <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Convert Button Style -->
        <Style x:Key="ConvertButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Margin="{TemplateBinding Padding}"
                                                    VerticalAlignment="Center"
                                                    Content="{TemplateBinding SelectionBoxItem}"/>
                                    <Path Grid.Column="1" 
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="{StaticResource SecondaryTextBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Popup Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True">
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Margin="0,2,0,0">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TabControl Style -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Modern TabItem Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="#FAFAFA" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1,1,1,0" 
                                CornerRadius="8,8,0,0"
                                Margin="2,0,2,0">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="20,12"
                                            TextBlock.FontSize="14"
                                            TextBlock.FontWeight="Medium"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource DisabledBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#BDBDBD"/>
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{StaticResource DisabledTextBrush}"/>
                                <Setter TargetName="ContentSite" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="#E0E0E0" CornerRadius="10" Height="8">
                            <Border Name="PART_Track" CornerRadius="10">
                                <Border Name="PART_Indicator" 
                                        Background="{StaticResource PrimaryBrush}" 
                                        CornerRadius="10"
                                        HorizontalAlignment="Left"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style for Tab Content -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                      Direction="270" 
                                      ShadowDepth="2" 
                                      BlurRadius="8" 
                                      Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Settings -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="24,0">
                    <TextBlock Text="PDF &amp; Image Converter Pro" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="Convert, compress, and manage your documents with ease" 
                               FontSize="12" 
                               Foreground="{StaticResource SecondaryTextBrush}" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Settings Button -->
                <Button Grid.Column="1" 
                        Name="btnSettings"
                        Style="{StaticResource ModernButtonStyle}"
                        Background="Transparent"
                        Foreground="{StaticResource SecondaryTextBrush}"
                        Margin="0,0,24,0"
                        Padding="12"
                        Click="BtnSettings_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Settings" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Main TabControl -->
        <TabControl Grid.Row="1" 
                    Name="tabControlMain"
                    Style="{StaticResource ModernTabControlStyle}"
                    Background="Transparent"
                    Margin="0,8,0,0">

            <!-- PDF to Image Tab -->
            <TabItem Header="📄➡️🖼️ PDF to Image" 
                     Name="tabPagePdfToImage"
                     Style="{StaticResource ModernTabItemStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" 
                                       Text="Convert PDF pages to high-quality images"
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,24"/>

                            <!-- Input Section -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="PDF File:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtPdfToImageInputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnPdfToImageBrowseInput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnPdfToImageBrowseInput_Click"/>
                            </Grid>

                            <!-- Output Section -->
                            <Grid Grid.Row="2" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Output Folder:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtPdfToImageOutputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnPdfToImageBrowseOutput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnPdfToImageBrowseOutput_Click"/>
                            </Grid>

                            <!-- Format Section -->
                            <Grid Grid.Row="3" Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Image Format:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <ComboBox Grid.Column="1" 
                                          Name="cmbImageFormat"
                                          Style="{StaticResource ModernComboBoxStyle}">
                                    <ComboBoxItem Content="PNG" IsSelected="True"/>
                                    <ComboBoxItem Content="JPEG"/>
                                    <ComboBoxItem Content="BMP"/>
                                </ComboBox>
                            </Grid>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Row="4" 
                                         Name="progressBarPdfToImage"
                                         Style="{StaticResource ModernProgressBarStyle}"
                                         Visibility="Collapsed"
                                         Margin="0,0,0,24"/>

                            <!-- Spacer -->
                            <Grid Grid.Row="5"/>

                            <!-- Convert Button -->
                            <Button Grid.Row="6" 
                                    Name="btnPdfToImageConvert"
                                    Style="{StaticResource ConvertButtonStyle}"
                                    Content="🚀 Convert to Images"
                                    HorizontalAlignment="Right"
                                    Click="BtnPdfToImageConvert_Click"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Images to PDF Tab -->
            <TabItem Header="🖼️➡️📄 Images to PDF" 
                     Name="tabPageImageToPdf"
                     Style="{StaticResource ModernTabItemStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" 
                                       Text="Combine multiple images into a single PDF document"
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,24"/>

                            <!-- Input Section -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Images:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtImageToPdfInputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnImageToPdfBrowseInput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnImageToPdfBrowseInput_Click"/>
                            </Grid>

                            <!-- Output Section -->
                            <Grid Grid.Row="2" Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Output PDF:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtImageToPdfOutputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnImageToPdfBrowseOutput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnImageToPdfBrowseOutput_Click"/>
                            </Grid>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Row="3" 
                                         Name="progressBarImageToPdf"
                                         Style="{StaticResource ModernProgressBarStyle}"
                                         Visibility="Collapsed"
                                         Margin="0,0,0,24"/>

                            <!-- Spacer -->
                            <Grid Grid.Row="4"/>

                            <!-- Convert Button -->
                            <Button Grid.Row="5" 
                                    Name="btnImageToPdfConvert"
                                    Style="{StaticResource ConvertButtonStyle}"
                                    Content="🚀 Create PDF"
                                    HorizontalAlignment="Right"
                                    Click="BtnImageToPdfConvert_Click"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Compress Image Tab -->
            <TabItem Header="🗜️ Compress Images" 
                     Name="tabPageCompressImage"
                     Style="{StaticResource ModernTabItemStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" 
                                       Text="Reduce image file sizes while maintaining quality"
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,24"/>

                            <!-- Input Section -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Images:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtCompressImageInputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnCompressImageBrowseInput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnCompressImageBrowseInput_Click"/>
                            </Grid>

                            <!-- Output Section -->
                            <Grid Grid.Row="2" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Output Folder:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtCompressImageOutputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnCompressImageBrowseOutput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnCompressImageBrowseOutput_Click"/>
                            </Grid>

                            <!-- Quality Section -->
                            <Grid Grid.Row="3" Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Quality:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <Slider Grid.Column="1" 
                                        Name="sliderCompressionQuality"
                                        Minimum="1" 
                                        Maximum="100" 
                                        Value="80"
                                        TickFrequency="10"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,0,12,0"
                                        ValueChanged="SliderCompressionQuality_ValueChanged"/>
                                <TextBlock Grid.Column="2" 
                                           Name="lblCompressionQualityValue"
                                           Text="80%"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </Grid>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Row="4" 
                                         Name="progressBarCompressImage"
                                         Style="{StaticResource ModernProgressBarStyle}"
                                         Visibility="Collapsed"
                                         Margin="0,0,0,24"/>

                            <!-- Spacer -->
                            <Grid Grid.Row="5"/>

                            <!-- Convert Button -->
                            <Button Grid.Row="6" 
                                    Name="btnCompressImageConvert"
                                    Style="{StaticResource ConvertButtonStyle}"
                                    Content="🚀 Compress Images"
                                    HorizontalAlignment="Right"
                                    Click="BtnCompressImageConvert_Click"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Split PDF Tab -->
            <TabItem Header="✂️ Split PDF" 
                     Name="tabPageSplitPdf"
                     Style="{StaticResource ModernTabItemStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0" 
                                       Text="Extract specific pages from PDF documents"
                                       FontSize="16" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,0,24"/>

                            <!-- Input Section -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="PDF File:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtSplitPdfInputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnSplitPdfBrowseInput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnSplitPdfBrowseInput_Click"/>
                            </Grid>

                            <!-- Output Section -->
                            <Grid Grid.Row="2" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Output Folder:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtSplitPdfOutputPath"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Margin="0,0,12,0"/>
                                <Button Grid.Column="2" 
                                        Name="btnSplitPdfBrowseOutput"
                                        Style="{StaticResource BrowseButtonStyle}"
                                        Content="Browse"
                                        Click="BtnSplitPdfBrowseOutput_Click"/>
                            </Grid>

                            <!-- Pages Section -->
                            <Grid Grid.Row="3" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Pages:" 
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBox Grid.Column="1" 
                                         Name="txtSplitPages"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         ToolTip="Examples: 1,3,5 or 1-5 or 1,3-7,10"/>
                            </Grid>

                            <!-- Help Text -->
                            <TextBlock Grid.Row="4" 
                                       Text="Examples: 1,3,5 (specific pages) • 1-5 (page range) • 1,3-7,10 (mixed)"
                                       FontSize="12" 
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="120,0,0,24"/>

                            <!-- Progress Bar -->
                            <ProgressBar Grid.Row="5" 
                                         Name="progressBarSplitPdf"
                                         Style="{StaticResource ModernProgressBarStyle}"
                                         Visibility="Collapsed"
                                         Margin="0,0,0,24"/>

                            <!-- Convert Button -->
                            <Button Grid.Row="6" 
                                    Name="btnSplitPdfConvert"
                                    Style="{StaticResource ConvertButtonStyle}"
                                    Content="🚀 Split PDF"
                                    HorizontalAlignment="Right"
                                    Click="BtnSplitPdfConvert_Click"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Settings Popup -->
        <Border Name="settingsPopup" 
                Grid.RowSpan="2"
                Background="#80000000" 
                Visibility="Collapsed">
            <Border Background="{StaticResource SurfaceBrush}" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Width="400" 
                    Height="300" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" BlurRadius="16" Opacity="0.2"/>
                </Border.Effect>

                <Grid Margin="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Settings Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,24">
                        <TextBlock Text="⚙️ Settings" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Configure application preferences" 
                                   FontSize="12" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Settings Content -->
                    <StackPanel Grid.Row="1">
                        <CheckBox Name="chkWebIndexing" 
                                  Content="Enable Web Indexing" 
                                  FontSize="14" 
                                  FontWeight="Medium"
                                  Foreground="{StaticResource TextBrush}"
                                  Margin="0,0,0,8"
                                  Checked="ChkWebIndexing_CheckedChanged"
                                  Unchecked="ChkWebIndexing_CheckedChanged"/>
                        <TextBlock Text="Opting in for Web Indexing will allow you to enjoy full features of our app" 
                                   FontSize="12" 
                                   Foreground="{StaticResource SecondaryTextBrush}" 
                                   TextWrapping="Wrap"
                                   Margin="24,0,0,16"/>
                    </StackPanel>

                    <!-- Settings Footer -->
                    <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,16,0,0">
                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Name="btnShowConsent"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Content="Show Consent Dialog"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,12,0" 
                                Click="BtnShowConsent_Click"/>
                            <Button Name="btnCloseSettings"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="#757575"
                                    Content="Close"
                                    Click="BtnCloseSettings_Click"/>
                        </StackPanel>


                        <TextBlock TextAlignment="Right" Margin="0,10,0,0">
                            <Hyperlink NavigateUri="https://bright-sdk.com/users#learn-more-about-bright-sdk-web-indexing"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                Learn more
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>